@model IEnumerable<DoAnNhom3.Models.TaiLieuModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!--Table-->
		<div style="text-align: center; margin-bottom: 20px; margin-top: 20px;">
			<h2 style="margin-bottom: 20px;">Danh sách tài liệu</h2>
			<div style="text-align: left; margin-left: 10%; margin-bottom: 20px">
				<a
					asp-action="ThemTaiLieu"
					class="btn btn-success"
					><i class="bi bi-pencil"></i
					><span>Thêm Tài Liệu Mới</span>
				  </a>
			</div>
			<table border="1" style="margin: auto; border-collapse: collapse; width: 80%;">
				<thead>
					<tr style="background-color: #f2f2f2;">
						<th style="padding: 12px; text-align: center;">Mã tài liệu</th>
						<th style="padding: 12px; text-align: center;">Tên khoa</th>
						<th style="padding: 12px; text-align: center;">Tên học kỳ</th>
						<th style="padding: 12px; text-align: center;">Tên tài liệu</th>
						<th style="padding: 12px; text-align: center;">Hình</th>
						<th style="padding: 12px; text-align: center;">Giá</th>
						<th style="padding: 12px; text-align: center;">Actions</th>
					</tr>
				</thead>
				<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td style="padding: 8px; text-align: center;">@item.Id</td>
					<td style="padding: 8px;">@item.Khoa.TenKhoa</td>
					<td style="padding: 8px;">@item.HocKy.TenHK</td>
					<td style="padding: 8px; text-align: center;">@item.TenTaiLieu</td>
						<td style="padding: 8px; text-align: center;"><img style="height: 150px; width: 150px;" src="../LayoutAdmin/img/tailieu/@item.HinhTaiLieu" alt=""></td>
					<td style="padding: 8px; text-align: center;">@item.Gia</td>
					<td style="padding: 8px; text-align: center;">
						<a asp-action="SuaTaiLieu" asp-route-id="@item.Id" style="color: blue; text-decoration: none;">Edit</a> | 
						<a asp-action="XoaTaiLieu" asp-route-id="@item.Id" onclick="return confirm('Bạn muốn xóa khoa này?')" style="color: red; text-decoration: none;">Delete</a>
					</td>
				</tr>				
			}
		</tbody>
			</table>
		</div>         
		<!-- /Table -->
