@model DoAnNhom3.Models.KhoaModel;

@{
    ViewData["Title"] = "SuaKhoa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Form Add -->
        <div style="display: flex; justify-content: center; align-items: center; margin-top: 20px; margin-bottom: 20px;">
            <form asp-action="SuaKhoa" class="register-form" method="post">
                <h2>Sửa khoa</h2>
                <input type="hidden" class="form-control" asp-for="Id">
                <label for="documentName">Tên khoa</label>
                <input type="text" class="form-control" placeholder="Nhập tên khoa" required asp-for="TenKhoa">                    

                <input type="submit" value="Sửa khoa">
            </form>
        </div>
         <!-- /Form Add -->
